###############################
# Database configuration
###############################
# Path to the SQLite database file
ROCKMUNDO_DB_PATH=backend/rockmundo.db

###############################
# Authentication / JWT
###############################
# Secret used to sign JWT tokens (change in production)
ROCKMUNDO_JWT_SECRET=dev-change-me
# JWT issuer claim
ROCKMUNDO_JWT_ISS=rockmundo
# JWT audience claim
ROCKMUNDO_JWT_AUD=rockmundo-app
# Algorithm used to sign JWTs
ROCKMUNDO_JWT_ALG=HS256
# Access token lifetime in minutes
ROCKMUNDO_ACCESS_TTL_MIN=30
# Refresh token lifetime in days
ROCKMUNDO_REFRESH_TTL_DAYS=30

###############################
# Integrations
###############################
# Discord webhook for error/ops notifications (optional)
DISCORD_WEBHOOK_URL=

###############################
# Rate limiting
###############################
# Requests allowed per minute for each IP
ROCKMUNDO_RATE_LIMIT_REQUESTS_PER_MIN=60
# Backend used to store counters: "memory" or "redis"
ROCKMUNDO_RATE_LIMIT_STORAGE=memory
# Redis connection string if using redis for rate limiting
ROCKMUNDO_RATE_LIMIT_REDIS_URL=redis://localhost:6379/0

###############################
# CORS
###############################
# Comma-separated list of allowed origins
# Set to https://your-netlify-site.netlify.app
ROCKMUNDO_CORS_ALLOWED_ORIGINS=""

###############################
# Realtime backend
###############################
# Backend for realtime features: "memory" or "redis"
ROCKMUNDO_REALTIME_BACKEND=memory
# Redis URL if using redis for realtime features
ROCKMUNDO_REALTIME_REDIS_URL=redis://localhost:6379/0

###############################
# Advanced AI features
###############################
# Master switch for experimental AI components
ENABLE_ADVANCED_AI=1
# Toggle individual managers
ENABLE_TOUR_AI_MANAGER=1
ENABLE_PR_AI_MANAGER=1

###############################
# Storage configuration
###############################
# Which backend to use: 'local' or 's3'
STORAGE_BACKEND=local

# Local storage settings
# Directory where uploaded files are stored when using local backend
STORAGE_LOCAL_ROOT=./var/storage
# Base URL clients use to access uploaded files
STORAGE_PUBLIC_BASE_URL=http://localhost:8000/static/uploads

# S3 settings (only used if STORAGE_BACKEND=s3)
# Name of the S3 bucket
S3_BUCKET=your-bucket-name
# AWS region for the bucket
S3_REGION=eu-west-2
# Optional custom endpoint for S3-compatible services
S3_ENDPOINT_URL=
# Force path-style URLs (true for services like MinIO)
S3_FORCE_PATH_STYLE=true
# AWS access key
AWS_ACCESS_KEY_ID=your-access-key
# AWS secret key
AWS_SECRET_ACCESS_KEY=your-secret

